{
    "manifest_version": 3,
    "name": "InstaBear",
    "version": "1.0.0",
    "description": "Login instan ke Instagram hanya dengan Bearer Token - tanpa password, tanpa ribet!",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icons/icon16.png"
    },
    "permissions": [
        "activeTab",
        "cookies",
        "storage"
    ],
    "host_permissions": [
        "https://*.instagram.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}